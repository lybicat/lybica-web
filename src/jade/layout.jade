include ./includes/progressbar.jade
doctype html
html
  head
    block title
      title Lybica
    meta(charset="utf-8")
    block css
      link(rel="stylesheet", href="css/main.css")
  body
    nav(class="navbar navbar-default navbar-fixed-top", role="banner")
      .container-fluid
        .navbar-header
          a.navbar-brand(href="/")
            i.fa(class="fa-home")
            | Lybica
            sup beta
        nav(class="collapse navbar-collapse", role="navigation")
          ul(class="nav navbar-nav")
            li
              a(href="/testplan.html")#testPlanLink
                i.fa(class="fa-tasks")
                | Test Plan
            li
              a(href="/testtrigger.html")#testTriggerLink
                i.fa(class="fa-git-square")
                | Test Trigger
            li
              a(href="/testscheduler.html")#testSchedulerLink
                i.fa(class="fa-calendar-check-o")
                | Test Scheduler
            li
              a(href="/testreport.html")#testReportLink
                i.fa(class="fa-area-chart")
                | Test Report
            li
              a(href="/swbuild.html")#swBuildLink
                i.fa(class="fa-diamond")
                | SW Build
            li
              a(href="/testagent.html")#testAgentLink
                i.fa(class="fa-cloud")
                | Test Agent
    .container-fluid
      .row
        .col-sm-3
          .sidebar-nav
            div(class="sidebar-nav navbar navbar-default", role="navigation")
              div(class="navbar-collapse collapse sidebar-navbar-collapse")
                ul(class="nav navbar-nav")
                  block sidebar
        .col-sm-9#content-wrapper
          block content
  block script
    script(src="js/taskqueue.js")
